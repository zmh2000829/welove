@import '../../common/common.wxss';
.
.btn{
    position: relative;
}
.header{
    position: relative;
    margin-top: 15rpx;
    font-size: 34rpx;
    text-align: center;
}
.card{
    font-size: 26rpx;
    position: relative;
    margin-top: 25rpx;
    padding-top: 15rpx;
    padding-left: 15rpx;
    padding-bottom: 5rpx;
    display: flex;
    border-radius:15rpx;
    box-shadow: 0px 0px 8rpx #888888;
    height: 150rpx;
    width: 90%;
    left: 50%;
    transform: translateX(-50%);
    overflow:auto;
}
.show_info{
    position: relative;
    width: 70%;
}
.btn_block{
    position: relative;
    float: right;
    width: 180rpx;
}
.butt{
    position: relative;
    top: 50%;
    transform: translateY(-50%);
}