@import '../../common/common.wxss';
@import "../../../colorui/main.wxss";
@import "../../../colorui/icon.wxss";
page,.main{
    height: 100%;
}
.bg{
    background-color: #69c4aa;
    width: 100%;
    height: 12%;
    z-index: 0;
}
.tag-bg{
    position: absolute;
    display: flex;
    top: 0%;
    left: 50%;
    transform: translateX(-50%);
    width: 85%;
    height: 21%;
}
.tag-bg .tag-img{
    z-index: 2;
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 2;
}
.tag{
    position: absolute;
    display: flex;
    top: 0%;
    left: 50%;
    transform: translateX(-50%);
    width: 85%;
    height: 21%;
    vertical-align: middle;
    /*
    background-repeat: no-repeat;
    background-size: cover;
    background-image: url('https://link-studio.cn/welove/images/card1.png');
    */
}
.tag .thumb{
    position: relative;
    left: 8%;
    top: 50%;
    transform: translateY(-50%);
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    z-index: 3;
}
.tag .intr{
    display: block;
    position: relative;
    left: 20%;
    z-index: 3;
}
.block{
    top: 50%;
    display: block;
    white-space: pre-line;
    line-height: 60rpx;
    position: relative;
    transform: translateY(-50%);
}
.nickname{
    font-size: 30rpx;
    font-weight:bold;
}
.admin{
    font-size: 24rpx;
}
.apply{
    padding: 0;
    align-items: left;
    padding-left: 15rpx;
    position: absolute;
    top: 23%;
    background-color: white;
    left: 50%;
    transform: translateX(-50%);
    width: 85%;
    height: 75%;
    border-radius:15rpx;
    box-shadow: 0px 0px 8rpx #888888;
}
.header{
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    font-size: 34rpx;
    margin-top: 10rpx;
}
.input{
    margin-left: 7%;
    display: inline-block;
    line-height: 80rpx;
    vertical-align: middle;
    width: 60%;
}
.radios{
    display: flex;
    align-items: center;
}
.lineHeight {
    width: 90%;
    line-height: 65rpx;
    margin-left: 5%;
    border-bottom: 1px solid #ccc;
    font-size: 30rpx;
}
.lineHeight2{
    width: 90%;
    line-height: 65rpx;
    margin-left: 5%;
    font-size: 30rpx;
}
.lineHeight3{
    width: 30%;
    line-height: 65rpx;
    font-size: 30rpx;
}
.lineHeight4{
    width: 50%;
    line-height: 65rpx;
    font-size: 30rpx;
}
.choosen{
    margin-left: 5%;
    width: 90%;
    display: flex;
    border-bottom: 1px solid #ccc;
}
.area{
    height: 120rpx;
    border: 1px solid #ccc;
}
.btn{
    position: absolute;
    top: 90%;
    left: 50%;
    transform: translateX(-50%);
}