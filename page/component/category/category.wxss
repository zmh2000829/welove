@import '../../common/common.wxss';
@import "../../../colorui/main.wxss";
@import "../../../colorui/icon.wxss";
page .main{
    height: 100%;
}
radio {
  transform:scale(0.85);
}
.bg{
    background-color: #69c4aa;
    width: 100%;
    height: 12%;
    z-index: 0;
}
.tag-bg{
    position: absolute;
    display: flex;
    top: 0%;
    left: 50%;
    transform: translateX(-50%);
    width: 85%;
    height: 21%;
}
.tag-bg .tag-img{
    z-index: 2;
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 2;
}
.tag{
    position: absolute;
    display: flex;
    top: 0%;
    left: 50%;
    transform: translateX(-50%);
    width: 85%;
    height: 21%;
    vertical-align: middle;
}
.tag .thumb{
    position: relative;
    left: 8%;
    top: 50%;
    transform: translateY(-50%);
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    z-index: 3;
}
.tag .intr{
    display: block;
    position: relative;
    left: 20%;
    z-index: 3;
}
.block{
    top: 50%;
    display: block;
    white-space: pre-line;
    line-height: 60rpx;
    position: relative;
    transform: translateY(-50%);
}
.nickname{
    font-size: 30rpx;
    font-weight:bold;
}
.admin{
    font-size: 24rpx;
}
.apply{
    padding: 0;
    align-items: left;
    padding-left: 15rpx;
    position: absolute;
    top: 23%;
    background-color: white;
    left: 50%;
    transform: translateX(-50%);
    width: 85%;
    height: 75%;
    border-radius:15rpx;
    box-shadow: 0px 0px 8rpx #888888;
    font-size: 26rpx;
}
.header{
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    font-size: 34rpx;
    margin-top: 10rpx;
}
.input{
    margin-left: 7%;
    display: inline-block;
    line-height: 80rpx;
    vertical-align: middle;
    width: 60%;
}
.radios{
    display: flex;
    align-items: center;
}
.lineHeight {
    width: 90%;
    line-height: 55rpx;
    margin-left: 5%;
    border-bottom: 1px solid #ccc;
}
.lineHeight2{
    width: 90%;
    line-height: 55rpx;
    margin-left: 5%;
}
.tagLabel {
    margin-left: 5%;
    line-height: 69rpx;
    position: relative;
    box-sizing: border-box;
}
.tagLabel .lable{
    float: left;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 150rpx;
    height: 50rpx;
    line-height: 48rpx;
    background-color: #f5f5f5;
    margin-right: 20rpx;
    margin-bottom: 0rpx;
    background-color: #f5f5f5;
    color: #999;
    font-size: 24rpx;
    border-radius: 25rpx;
}
.tagBtn {
    line-height: 55rpx;
    position: relative;
    text-align: center;
    border-radius: 25rpx;
    background-color: #666;
    width: 157rpx;
    height: 50rpx;
}
.lineHeight3{
    width: 30%;
    line-height: 55rpx;
}
.lineHeight4{
    width: 50%;
    line-height: 55rpx;
}
.choosen{
    margin-left: 5%;
    width: 90%;
    display: flex;
    border-bottom: 1px solid #ccc;
}
.fz24 {
  font-size: 24rpx !important;
}
.area{
    height: 100rpx;
    position: relative;
    width: 100%;
    border: 1px solid #ccc;
}
.btn{
    position: absolute;
    top: 90%;
    left: 50%;
    transform: translateX(-50%);
}